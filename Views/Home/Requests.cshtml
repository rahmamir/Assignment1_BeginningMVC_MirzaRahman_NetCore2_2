@using Assignment1_BeginningMVC_MirzaRahman_NetCore2_2.Models
@model IEnumerable<Request>

@{
    ViewData["Title"] = "Requests";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ///Prints a list of all current requests, ADMIN ACCESS ONLY
    ///ADMIN may click details to view the details of a specific request, will be redirected to RequestDetails page
}

    <div class="form-group">
        <h1>All Requests</h1>
    </div>
    <div>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Type</th>
                    <th scope="col">Description</th>
                    <th scope="col">Availability</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var request in Model)
                {
                    <tr>
                        <td>@request.EquipmentType</td>
                        <td>@request.Name</td>
                        <td>@request.Role</td>
                        <td>
                            <a href="RequestDetails/@request.RequestID">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>







