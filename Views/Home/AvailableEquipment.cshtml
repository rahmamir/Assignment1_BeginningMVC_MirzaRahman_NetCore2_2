@using Assignment1_BeginningMVC_MirzaRahman_NetCore2_2.Models
@model IEnumerable<Equipment>

@{
    ViewData["Title"] = "AvailableEquipment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="alert-heading">
        <h3>Available Equipment</h3>
    </div>
    <div class="table-light">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Type</th>
                    <th scope="col">Description</th>
                    <th scope="col">Availability</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var equipment in Model.Where(p => p.Availability == true)
                       .Select(p => p))
                {
                    <tr>
                        <td>@equipment.EquipmentID</td>
                        <td>@equipment.EquipmentType</td>
                        <td>@equipment.Description</td>
                        @if (equipment.Availability)
                        {
                            <td class="btn-success">@equipment.Availability</td>
                        }
                        else
                        {
                            <td class="btn-danger">@equipment.Availability</td>
                        }
                    </tr>
                }
            </tbody>
        </table>

    </div>



