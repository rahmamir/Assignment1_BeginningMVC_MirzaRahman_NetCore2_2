@using Assignment1_BeginningMVC_MirzaRahman_NetCore2_2.Models
@model IEnumerable<Equipment>

@{
    ViewData["Title"] = "Equipment Listing";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ///prints the list of all equipment, available or not
}

    <div class="form-group">
        <h1>EquipmentListing</h1>
    </div>
    <div class="form-group">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Type</th>
                    <th scope="col">Description</th>
                    <th scope="col">Availability</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var equipment in Model)///loops through all equipment in repository
                {
                    <tr>
                        <td>@equipment.EquipmentID</td>
                        <td>@equipment.EquipmentType</td>
                        <td>@equipment.Description</td>
                        @if (equipment.Availability)
                        {
                            <td class="btn-success">@equipment.Availability</td>///If Available(Green), If Not(Red)
 }
                        else
                        {
                            <td class="btn-danger">@equipment.Availability</td>
}
                    </tr>
                }
            </tbody>
        </table>
    </div>







